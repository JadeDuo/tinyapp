<header>
  <nav class="navbar navbar-expand-md navbar-dark" style="background-color: #4bc2c2">
    <a class="navbar-brand" href="/">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav" style="width: 100%;">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if(user === undefined){ %>
          <a class="nav-item nav-link" href="/register">Create Account</a>
          <a class="nav-item nav-link" href="/login">Login</a>
          <% } %>
      </div>
        <% if(user !== undefined){ %>
          
            <span style="color:white">Logged in as <%= user.email %></span>
            <form class="form-inline" method="POST" action="/logout">
              <button type="submit" class="btn btn-light btn-sm">Logout</button>
            </form>
        <% } %>
    </div>  
  </nav>
</header>